{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "module": "esnext",
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "types": ["node", "jest"],
    "allowJs": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  }
}
